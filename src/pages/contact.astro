---
import Layout from '../layouts/Layout.astro';
import { SITE_TITLE } from '../consts';
---

<Layout title={`Contact - ${SITE_TITLE}`}>
	<section class="section text-center">
		<div class="container">
			<h1>Contact Us</h1>
			<p class="subtitle">We'd love to hear from you.</p>
			
			<div class="contact-links">
				<a href="mailto:onesimpleapp@gmail.com" class="contact-button">
					Email Support
				</a>
				<br/>
				<a href="https://x.com/getscreentimer" target="_blank" class="contact-button secondary">
					Follow on X
				</a>
			</div>
		</div>
	</section>
</Layout>

<style>
	.subtitle {
		font-size: 1.2rem;
		color: var(--color-text-secondary);
		margin-bottom: 3rem;
	}

	.contact-links {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1rem;
	}

	.contact-button {
		font-size: 1.1rem;
		color: var(--color-accent);
		font-weight: 500;
	}
    
    .contact-button.secondary {
        color: var(--color-text-secondary);
    }
</style>
