---
import Layout from '../layouts/Layout.astro';
import AppCard from '../components/AppCard.astro';
import { APPS, SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<Layout title={SITE_TITLE} description={SITE_DESCRIPTION}>
	<section class="hero section">
		<div class="container text-center">
			<h1 class="hero-title">One.<br>Simple.<br>App.</h1>
            <p class="hero-subtitle">Useful apps for your iPhone.</p>
		</div>
	</section>

	<section class="apps-section section" id="apps">
		<div class="container">
			<div class="apps-grid">
				{APPS.map((app) => (
					<AppCard app={app} />
				))}
			</div>
		</div>
	</section>
</Layout>

<style>
	.hero {
		padding-top: 6rem;
		padding-bottom: 4rem;
	}

	.hero-title {
		font-size: 3.5rem;
		line-height: 1.1;
		font-weight: 700;
		letter-spacing: -0.03em;
		margin-bottom: 1.5rem;
	}
    
    .hero-subtitle {
        font-size: 1.5rem;
        color: var(--color-text-secondary);
        font-weight: 400;
        max-width: 600px;
        margin: 0 auto;
    }

	.apps-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
		gap: 1.5rem;
	}

	@media (max-width: 768px) {
		.hero-title {
			font-size: 2.5rem;
		}
        .hero-subtitle {
            font-size: 1.2rem;
        }
	}
</style>
