---
const currentYear = new Date().getFullYear();
---

<footer class="footer">
	<div class="container footer-content">
		<div class="footer-links">
			<a href="mailto:contact@onesimple.app">Contact</a>
			<a href="https://x.com/getscreentimer" target="_blank">Follow</a>
			<a href="/privacy">Privacy</a>
			<!-- <a href="/terms">Terms</a> -->
		</div>
        <div class="footer-bottom">
            <!-- Optional copyright if needed, keeping it minimal -->
             <p>&copy; {currentYear} OneSimpleApp</p>
        </div>
	</div>
</footer>

<style>
	.footer {
		padding: 4rem 0;
		margin-top: 4rem;
		border-top: 1px solid var(--color-border);
	}

	.footer-content {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 2rem;
	}

	.footer-links {
		display: flex;
		gap: 2rem;
		flex-wrap: wrap;
		justify-content: center;
	}

	.footer-links a {
		color: var(--color-text);
		font-weight: 500;
	}
    
    .footer-bottom {
        color: var(--color-text-secondary);
        font-size: 0.85rem;
    }
</style>
